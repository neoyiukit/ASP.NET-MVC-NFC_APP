@model FYPNFCWineSystem.Models.Project

@{
    ViewBag.Title = "Delete Your Project";
}

<h2>Delete Your Project</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset style="height:90%; vertical-align:middle;">
    <legend><div>Details of @Html.DisplayFor(model => model.ProjectName)</div></legend>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Project Name:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProjectName)
    </div>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Wine Name:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.WID)
    </div>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Supply Chain Partner:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.SupplyChain.PartnerName)
    </div>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Group Name:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Group.GroupName)
    </div>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Project Description:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProjectDescription)
    </div>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Project Starting Date:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProjectStartDate)
    </div>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Project Ending Date:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProjectEndDate)
    </div>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Project Status:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ProjectStatu.ProjectStatusName)
    </div>
</fieldset>


@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
