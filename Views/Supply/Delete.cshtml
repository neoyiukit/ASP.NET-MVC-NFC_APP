   <div class="display-label" style="text-decoration: underline overline; color: #721818;">Market Value:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.MarketValue)
    </div>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Address:</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Address)
    </div>

<div class="display-label" style="text-decoration: underline overline; color: #721818;">Phone:</div>
