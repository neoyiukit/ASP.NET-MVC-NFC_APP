</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.SupplyID }) |
    @Html.ActionLink("Delete", "Delete", new { id=Model.SupplyID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
