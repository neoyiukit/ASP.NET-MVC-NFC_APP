@model PagedList.IPagedList<FYPNFCWineSystem.Models.Group>


@{
    ViewBag.Title = "View Group List";
}

<h2>View Group List</h2>

<p>
    @Html.ActionLink("Create New Group", "AddGroup")
</p>
<table>
    <tr>
        <th>
            <div style="text-decoration: underline overline; color: #721818;">Group Name:</div>
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupName)
        </td>
    </tr>
}
 
</table>
<br>
<br>
<br>
<br>
<br>
<br>
<div>
@Html.ActionLink("Back to List", "Index")
</div>
<br>
<div>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    of @Model.PageCount
     
    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("<<", "ViewGroup", new { page = 1, currentFilter = ViewBag.CurrentFilter })
        @Html.Raw(" ");
        @Html.ActionLink("< Prev", "ViewGroup", new { page = Model.PageNumber - 1, currentFilter = ViewBag.CurrentFilter })
    }
    else
    {
        @:<<
        @Html.Raw(" ");
        @:< Prev
    }
     
    @if (Model.HasNextPage)
    {
        @Html.ActionLink("Next >", "ViewGroup", new { page = Model.PageNumber + 1, currentFilter = ViewBag.CurrentFilter })
        @Html.Raw(" ");
        @Html.ActionLink(">>", "ViewGroup", new { page = Model.PageCount, currentFilter = ViewBag.CurrentFilter })
    }
    else
    {
        @:Next >
        @Html.Raw(" ")
        @:>>
    }
</div>